<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header text-center text-white bg-primary">
          Create New Category
        </div>
        <div class="card-body">
          <%= form_for @group do |f| %>
            <div class="form-group">
              <%= f.label :name, "Category Name" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Category Name" %>
            </div>
            <div class="form-group">
                            
              <!-- Use a <select> element for the dropdown menu -->
              <%= f.select :icon, options_for_select({ 'Food' => 'icon1', 'Rent' => 'icon2', 'Game' => 'icon3', 'Fee' => 'icon4', 'Groceries Shopping' => 'icon5' }), { prompt: 'Select an Icon' }, class: 'form-control' %>
              
            </div>
            <%= f.submit "Save", class: 'btn btn-primary' %>
            <%= link_to 'Back', groups_path, class: 'btn btn-success' %>            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
